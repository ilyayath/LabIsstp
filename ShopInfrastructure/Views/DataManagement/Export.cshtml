<div class="container mt-5">
    <h2 class="text-center mb-4">Експорт даних у Excel</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Export" asp-controller="DataManagement" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label">Виберіть таблицю</label>
                    <select name="tableName" class="form-select" asp-items="@(new SelectList(ViewBag.SupportedTables))">
                        <option value="">Виберіть таблицю</option>
                    </select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Експортувати</button>
                    <a asp-action="AdminMerchandises" asp-controller="Merchandises" class="btn btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}