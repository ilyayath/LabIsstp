@model ShopDomain.Models.ExcelImportViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Імпорт даних із Excel</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Import" asp-controller="DataManagement" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="TableName" class="form-label">Виберіть таблицю</label>
                    <select asp-for="TableName" class="form-select" asp-items="@(new SelectList(ViewBag.SupportedTables))">
                        <option value="">Виберіть таблицю</option>
                    </select>
                    <span asp-validation-for="TableName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ExcelFile" class="form-label">Виберіть файл Excel (.xlsx)</label>
                    <input asp-for="ExcelFile" class="form-control" accept=".xlsx" />
                    <span asp-validation-for="ExcelFile" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Імпортувати</button>
                    <a asp-action="AdminMerchandises" asp-controller="Merchandises" class="btn btn-secondary">Назад</a>
                </div>
            </form>
            <p class="mt-3">
                Формати файлів:<br />
                - Merchandises: Name, Price, ImageUrl, BrandId, CategoryId, SizeId, TeamId<br />
                - Brands: BrandName<br />
                - Categories: CategoryName
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}