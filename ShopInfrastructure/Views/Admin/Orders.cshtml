@model List<ShopDomain.Models.MerchOrder>

@{
    ViewData["Title"] = "Усі замовлення (Admin)";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Усі замовлення</h2>

    @if (Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Користувач</th>
                    <th>Дата</th>
                    <th>Статус</th>
                    <th>Товари</th>
                    <th>Загальна сума</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.UserId</td>
                        <td>@order.OrderDate.("dd.MM.yyyy HH:mm")</td>
                        <td>@(order.Status?.StatusName ?? "Невідомо")</td>
                        <td>
                            <ul>
                                @foreach (var item in order.OrderItems)
                                {
                                    <li>@item.Merch.Name (x@item.Quantity) - @item.Price.ToString("C", CultureInfo.CurrentCulture)</li>
                                }
                            </ul>
                        </td>
                        <td>@order.OrderItems.Sum(oi => oi.Price * oi.Quantity).ToString("C", CultureInfo.CurrentCulture)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">Замовлень немає.</p>
    }

    <a asp-action="Index" asp-controller="Merchandises" class="btn btn-secondary mt-3">Назад до товарів</a>
</div>

<style>
    .container {
        max-width: 1200px;
    }

    .table {
        background-color: #fff;
    }
</style>

@using System.Globalization