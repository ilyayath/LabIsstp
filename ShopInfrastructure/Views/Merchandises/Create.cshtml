@model ShopDomain.Models.Merchandise

@{
    ViewData["Title"] = "Додати товар";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Додати новий товар</h2>

    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label">Назва</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Price" class="control-label">Ціна</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ImageUrl" class="control-label">URL зображення</label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BrandId" class="control-label">Бренд</label>
            <select asp-for="BrandId" class="form-control" asp-items="@(new SelectList(ViewBag.Brands, "Id", "BrandName"))">
                <option value="">Виберіть бренд</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="CategoryId" class="control-label">Категорія</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "Id", "CategoryName"))">
                <option value="">Виберіть категорію</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="SizeId" class="control-label">Розмір</label>
            <select asp-for="SizeId" class="form-control" asp-items="@(new SelectList(ViewBag.Sizes, "Id", "SizeName"))">
                <option value="">Виберіть розмір</option>
            </select>
            <span asp-validation-for="SizeId" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="TeamId" class="control-label">Команда</label>
            <select asp-for="TeamId" class="form-control" asp-items="@(new SelectList(ViewBag.Teams, "Id", "TeamName"))">
                <option value="">Виберіть команду</option>
            </select>
            <span asp-validation-for="TeamId" class="text-danger"></span>
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-primary">Додати</button>
            <a asp-action="AdminMerchandises" class="btn btn-secondary ml-2">Назад до списку</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 800px;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .ml-2 {
        margin-left: 0.5rem;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}