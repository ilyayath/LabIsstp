@model ShopDomain.Models.ReviewViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Додати відгук до @Model.MerchandiseName</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="AddReview" method="post">
                <input type="hidden" asp-for="MerchandiseId" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Rating" class="form-label">Оцінка (1-5)</label>
                    <input asp-for="Rating" class="form-control" type="number" min="1" max="5" placeholder="Введіть оцінку від 1 до 5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Comment" class="form-label">Коментар</label>
                    <textarea asp-for="Comment" class="form-control" rows="5" placeholder="Напишіть ваш відгук..."></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Додати відгук</button>
                    <a asp-action="Details" asp-route-id="@Model.MerchandiseId" class="btn btn-secondary">Назад до товару</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}