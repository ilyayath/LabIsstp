<div class="container mt-5">
    <h2 class="text-center mb-4">Імпорт товарів із Excel</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ImportMerchandises" asp-controller="Merchandises" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label class="form-label">Виберіть файл Excel (.xlsx)</label>
                    <input type="file" name="excelFile" class="form-control" accept=".xlsx" />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Імпортувати</button>
                    <a asp-action="AdminMerchandises" class="btn btn-secondary">Назад</a>
                </div>
            </form>
            <p class="mt-3">Формат файлу: Name, Price, ImageUrl, BrandId, CategoryId, SizeId, TeamId, Description</p>
        </div>
    </div>
</div>