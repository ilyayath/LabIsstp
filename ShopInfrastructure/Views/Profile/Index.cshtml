@model ShopDomain.Models.ProfileViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Ваш профіль</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Model.Email" disabled />
                    <small class="form-text text-muted">Email не можна змінити.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Повне ім’я</label>
                    <input asp-for="FullName" class="form-control" placeholder="Введіть ваше ім’я" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-login">Зберегти зміни</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">На головну</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}