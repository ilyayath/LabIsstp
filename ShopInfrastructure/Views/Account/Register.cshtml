@model RegisterModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Реєстрація</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" method="post">
                <input type="hidden" asp-for="@ViewData["ReturnUrl"]" name="returnUrl" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Повне ім’я</label>
                    <input asp-for="FullName" class="form-control" placeholder="Введіть ваше ім’я" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Введіть ваш email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Введіть пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-register">Зареєструватися</button>
                    <a asp-action="Login" class="btn btn-login">Увійти</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}