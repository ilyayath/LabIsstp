@model ShopDomain.Models.RegisterViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Реєстрація</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Введіть ваш email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">Повне ім’я</label>
                    <input asp-for="FullName" class="form-control" placeholder="Введіть ваше ім’я" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" class="form-control" placeholder="Введіть пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Підтвердження пароля</label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторіть пароль" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Зареєструватися</button>
                    <a asp-action="Login" asp-controller="Account" class="btn btn-secondary">Увійти</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}