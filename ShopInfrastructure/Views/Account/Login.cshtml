@model ShopDomain.Models.LoginViewModel

<div class="container mt-5">
    <h2 class="text-center mb-4">Вхід</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Введіть ваш email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label>
                    <input asp-for="Password" class="form-control" placeholder="Введіть пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Запам’ятати мене</label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Увійти</button>
                    <a asp-action="Register" asp-controller="Account" class="btn btn-secondary">Реєстрація</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}